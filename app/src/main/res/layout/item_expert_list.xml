<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_def_dp" />
    <View
        android:layout_below="@+id/img_dp"
        style="@style/cust_divider_gray"></View>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_follow"
        android:layout_toRightOf="@+id/img_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="Expert Name"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_expert_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="start"
            android:text="Nutritionlist"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_experiense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="3 Years Of Experiense"
            android:textColor="@color/colorTextHint"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_follow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_follow_selected"
        android:text="Following"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold" />




</RelativeLayout>
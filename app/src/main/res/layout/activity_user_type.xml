<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.multipz.mcc.activity.ActivityUserType">

    <ImageView
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_cross" />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My City Care"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp" />
        </RelativeLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you are USER then click on user button."
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/rlt_user"
            android:clickable="true"
            android:layout_width="200dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_type_btn"
            android:elevation="7dp">

            <TextView
                android:id="@+id/tag_txt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tag_img_user"
                android:duplicateParentState="true"
                android:textColor="@drawable/bg_text_selector_white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/tag_img_user"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_arrow_green" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_specialist"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_type_btn"
            android:elevation="7dp">

            <TextView
                android:id="@+id/tag_txt_specialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specialist"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tag_img_specialist"
                android:textColor="@drawable/bg_text_selector_white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/tag_img_specialist"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_arrow_green" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_seller"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_type_btn"
            android:elevation="7dp">

            <TextView
                android:id="@+id/tag_txt_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tag_img_seller"
                android:textColor="@drawable/bg_text_selector_white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/tag_img_seller"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_arrow_green" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Don't have account? "/>
            <TextView
                android:id="@+id/txt_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="Signin"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
